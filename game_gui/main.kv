#: include home.kv
#: include quiz.kv
#: include alistamento.kv


MDBoxLayout:
    id: main_win
    orientation: "vertical"
    space_x: self.size[0]  / 20 if Window.size[0] <= 1000 else self.size[0] / 10
    MDGridLayout:
        canvas.before:
            Color:
                rgba: .190, .189, .191, .3
            Rectangle:
                pos: self.pos
                size: self.size
        cols: 3
        size_hint_y: None
        height: 50
        padding: dp(5), dp(5)

        MDFlatButton:
            text: "Home"
            text_color: .252, .252, .252, .8


        MDLabel:
            text: "Fernão Magalhães"
            font_size: 16
            bold: True
            halign: "center"
            theme_text_color: "Custom"
            text_color: .252, .252, .252, 1


        MDFlatButton:
            text: "Cenas"
            text_color: .252, .252, .252, .8

    ScreenManager:
        size_hint: 1, .8
        id: screen_manager
        padding: dp(main_win.space_x), dp(5)
        HomeScreen:
            name: "home_screen"
            id: home_screen
        QuizScreen:
            name: "quiz_screen"
            id: quiz_screen
        Alistamento:
            name: "alistamento_screen"
            id: alistamento_screen



