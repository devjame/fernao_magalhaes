<Alistamento>:
    text_field: root.ids.nome
    btn_validar: root.ids.validar
    ingreso: root.ids.ingreso
    info_partida: root.ids.info_partida
    MDBoxLayout:
        orientation: "vertical"
        padding: 30
        spacing: 5
        MDTextField:
            id: nome
            hint_text: "Digite o seu nome..."
            miltiline: False
            focus: True
            size_hint_x: None
            width: dp("300")
            pos_hint: {"center_x": .5, "center_y": .5}

        MDRectangleFlatButton:
            id: validar
            text: "Validar"
            pos_hint: {"center_x": .5, "center_y": .4}
            on_release: root.mostrar_documento()


        MDLabel:
            id: ingreso
            size_hint_y: None
            height: self.texture_size[1]
            padding: 10, 20
            font_size: dp("18")
            line_height: 1.5

        MDLabel:
            id: info_partida
            size_hint_y: None
            height: self.texture_size[1]
            padding: 10, 0
            line_height: 1.5

        MDLabel:

    MDBoxLayout:
        id: btn_box
        size_hint_y: None
        height: 50
        cols: 1
        padding: 10
        canvas.before:
            Color:
                rgba: .190, .189, .191, .3
            Rectangle:
                pos: self.pos
                size: self.size

        MDRaisedButton:
            text: "Desistir"
            md_bg_color: .190, .189, .191, 1
            on_press:
                app.root.ids.screen_manager.transition.direction = 'right'
                app.root.ids.screen_manager.current = "quiz_screen"


        MDBoxLayout:

        MDRaisedButton:
            text: "Avan√ßar"
            md_bg_color: .190, .189, .191, 1
            on_press:
                app.root.ids.screen_manager.transition.direction = 'left'
                app.root.ids.screen_manager.current = "alistamento_screen"