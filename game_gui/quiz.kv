#: import Window kivy.core.window.Window

<QuizScreen>:
    MDBoxLayout:
        id: q_content_area
        orientation: 'vertical'
        spacing: 10

        MDBoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: [20, 10, 20, 0]
            MDLabel:
                text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit"
                font_size: 16
                halign: "center"
                size_hint_y: .1

            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: .15

                Image:
                    source: 'img/image-placeholder.png'
                    size_hint_x: 1
                    size: self.size
                    allow_stretch: True
                    keep_ratio: False

            MDLabel:
                text: "Mauris et lorem augue. Pellentesque euismod, augue ut tristique tincidunt, sem velit porta nibh, eget condimentum ipsum risus eu felis."
                font_size: 16
                size_hint_y: .2

            MDGridLayout:
                id: content_grid
                cols: 2
                spacing: 10
                size_hint_y: .5
                MDCheckbox:
                    id: cb_index_1
                    size_hint: None, None
                    size: "50dp", "50dp"
                    on_active: app.root.ids.quiz_screen.on_checkbox_active(*args)

                MDLabel:
                    id: lbl_index_1
                    text: "Mauris et lorem augue. Pellentesque euismod, augue ut tristique tincidunt"
                    font_size: 14

                MDCheckbox:
                    id: cb_index_2
                    size_hint: None, None
                    size: "48dp", "48dp"
                    on_active: app.root.ids.quiz_screen.on_checkbox_active(*args)

                MDLabel:
                    id: lbl_index_2
                    text: "Mauris et lorem augue. Pellentesque euismod, augue ut tristique tincidunt"
                    font_size: 14

                MDCheckbox:
                    id: cb_index_3
                    size_hint: None, None
                    size: "48dp", "48dp"
                    on_active: app.root.ids.quiz_screen.on_checkbox_active(*args)

                MDLabel:
                    id: lbl_index_3
                    text: "Mauris et lorem augue. Pellentesque euismod, augue ut tristique tincidunt"
                    font_size: 14

                MDCheckbox:
                    id: cb_index_4
                    size_hint: None, None
                    size: "48dp", "48dp"
                    on_active: app.root.ids.quiz_screen.on_checkbox_active(*args)

                MDLabel:
                    id: lbl_index_4
                    text: "Mauris et lorem augue. Pellentesque euismod, augue ut tristique tincidunt"
                    font_size: 14

        MDBoxLayout:
            id: btn_box
            size_hint_y: None
            height: 50
            cols: 1
            padding: 10
            canvas.before:
                Color:
                    rgba: .190, .189, .191, .3
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDRaisedButton:
                text: "Desistir"
                md_bg_color: .190, .189, .191, 1
                on_press:
                    app.root.ids.screen_manager.transition.direction = 'right'
                    app.root.ids.screen_manager.current = "home_screen"


            MDBoxLayout:

            MDRaisedButton:
                text: "Avan√ßar"
                md_bg_color: .190, .189, .191, 1
                on_press:
                    print(app.root.ids)


