#: import Window kivy.core.window.Window
<BoxOpcao>:
    id: content_grid
    cols: 2
    spacing: 10
    size_hint_y: .5

<QuizScreen>:
    MDBoxLayout:
        id: q_content_area
        orientation: 'vertical'
        spacing: 10

        MDBoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: [20, 10, 20, 0]
            MDLabel:
                text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit"
                font_size: 16
                halign: "center"
                size_hint_y: .1

            MDLabel:
                text: "Após um dia de trabalho exaustivo em  alto mar, entras na taverna dos sevilhanos e pede uma cerveja.\nSentado ao balcão, começas a ouvir uma conversa sobre uma embarcação que parte em breve em descoberta de uma nova rota para as ilhas Molucas."
                font_size: 16
                size_hint_y: .2

            MDLabel:
                text: "Gostaria de saber mais?"
                font_size: 16
                size_hint_y: .1
                halign: "center"

            BoxOpcao:


        MDBoxLayout:
            id: btn_box
            size_hint_y: None
            height: 50
            cols: 1
            padding: 10
            canvas.before:
                Color:
                    rgba: .190, .189, .191, .3
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDRaisedButton:
                text: "Desistir"
                md_bg_color: .190, .189, .191, 1
                on_press:
                    app.root.ids.screen_manager.transition.direction = 'right'
                    app.root.ids.screen_manager.current = "home_screen"


            MDBoxLayout:

            MDRaisedButton:
                text: "Avançar"
                md_bg_color: .190, .189, .191, 1
                on_press:
                    app.root.ids.screen_manager.transition.direction = 'left'
                    app.root.ids.screen_manager.current = "alistamento_screen"


